                                <tr>
                                    <th>Attendance Details</th>
                                    <th>Status</th>
                                    <th>Charged To</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                <tr>

                                    <td data-bind="text: SelectedAttendance().Session"></td>
                                    <td>
                                        <select id="changestatus" name="changestatus" data-bind="options: SelectedAttendance().attendancestatus,
                                           optionsText: 'AttendanceStatus',
                                           optionsValue: 'AttendanceId'"></select>
                                    </td>
                                    <td>
                                        <div data-bind="if:SelectedAttendance().IsFutureInvoiceAvailable" id="divfutureinvoiceshow">
