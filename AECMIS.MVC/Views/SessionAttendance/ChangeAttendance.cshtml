                                               optionsText: 'FIAValue',
                                               optionsValue: 'FIAId', value: SelectedAttendance().FutureInvoiceSelect, event:{ change: SelectedAttendance().FutureInvoiceValueChanged }  "></select>
                                        </div>
                                        <div data-bind="ifnot:SelectedAttendance().IsFutureInvoiceAvailable" id="divfutureinvoicenotshow">
                                            <label data-bind="text: SelectedAttendance().ChargedTo" id="idchargedtovaluenewtest"></label>
