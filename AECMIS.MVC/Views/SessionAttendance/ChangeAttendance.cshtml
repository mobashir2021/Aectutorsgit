                        <input type="hidden" data-bind="value:SelectedAttendance().RemainingCredits" name="remainingcredits" id="remainingcredits" />
                        <input type="hidden" data-bind="value:SelectedAttendance().IsDailyInvoiceData" name="isdailyinvoicedata" id="isdailyinvoicedata" />
