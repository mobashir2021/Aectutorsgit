<fieldset class="no-border">
    <legend>Contact Details</legend>
    <div class="row">
        <div class="col-md-2">
            <div class="form-group">
                <label>Home Number</label>
                <input class="form-control" type="text" data-bind="value: HomeNumber" data-val="true" id="home" name="home" maxlength="12" />
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label>Work Number</label>
                <input class="form-control" type="text" data-bind="value: WorkNumber" data-val="true" id="work" name="work" maxlength="12" />
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label>Mobile Number</label>
                <input class="form-control" type="text" data-bind="value: MobileNumber" data-val="true" id="mobile" name="mobile" maxlength="12" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="text" data-bind="value: Email" data-val="true" id="email" name="email" maxlength="40" />
            </div>
        </div>
    </div>
</fieldset>